<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nqff.drms.mapper.UserMapper">
    <insert id="insertUser">
        insert into user (name, email, password)
        values(#{name}, #{email}, #{password});
    </insert>
    <delete id="deleteUserById">
        delete from user where id = #{id};
    </delete>
    <select id="selectAll" resultType="com.nqff.drms.pojo.User">
        select * from user;
    </select>
    <select id="selectUserByEmail" resultType="com.nqff.drms.pojo.User">
        select * from user where email = #{email};
    </select>
    <select id="selectUserById" resultType="com.nqff.drms.pojo.User">
        select * from user where id = #{id};
    </select>
</mapper>